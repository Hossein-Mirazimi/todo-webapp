{
  "name": "@app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @app/server dev",
    "dev:spa": "vite",
    "build": "pnpm run build:client && pnpm run build:server && pnpm run add-extension",
    "build:client": "pnpm --filter @app/website build",
    "build:server": "pnpm --filter @app/server build",
    "add-extension": "node tools/add.js ./server/dist",
    "preview": "cross-env NODE_ENV=production node ./server/dist/server/index.js",
    "benchmark": "esno ./tools/benchmark.ts"
  },
  "dependencies": {
    "esno": "^4.8.0"
  },
  "devDependencies": {
    "axios": "^1.7.9",
    "cross-env": "^7.0.3",
    "k6": "^0.0.0"
  }
}
